<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo:</p>

            <%- include('includes/messages'); %>

            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Caso ainda não possua, crie uma conta logo abaixo:</p>

                    <form class="form-newUser" action="/login/register" method="POST">
                        <!--Validate token-->
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                      </form>

                </div>

                <div class="col-lg">
                    <h4>Entrar no sistema</h4>
                    <p>Já possuí uma conta, acesse abaixo:</p>

                    <form class="form-loginUser" action="/login/login" method="POST">
                        <!--Validate token-->
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <label>Seu e-mail</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>

                </div>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>